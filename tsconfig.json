{
    "include":  [
                    "src/**/*"
                ],
    "exclude":  [
                    "node_modules",
                    "dist",
                    "**/*.test.ts",
                    "**/*.spec.ts"
                ],
    "compilerOptions":  {
                            "skipLibCheck":  true,
                            "strict":  true,
                            "allowSyntheticDefaultImports":  true,
                            "emitDecoratorMetadata":  true,
                            "experimentalDecorators":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "lib":  [
                                        "ES2020"
                                    ],
                            "moduleResolution":  "node",
                            "outDir":  "./dist",
                            "target":  "ES2020",
                            "types":  [
                                          "node",
                                          "jest"
                                      ],
                            "declarationMap":  true,
                            "esModuleInterop":  true,
                            "sourceMap":  true,
                            "paths":  {
                                          "@/*":  [
                                                      "*"
                                                  ]
                                      },
                            "rootDir":  "./src",
                            "declaration":  true,
                            "resolveJsonModule":  true,
                            "baseUrl":  "./src",
                            "module":  "CommonJS",
                            "moduleDetection": "force"
                        }
}