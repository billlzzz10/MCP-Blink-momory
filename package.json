{
  "name": "mcp-memory",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "bin": {
    "mcp-memory": "./src/cli.js"
  },
  "scripts": {
    "start": "node ./src/server.js",
    "cli": "node ./src/cli.js",
    "health": "node -e \"fetch('http://localhost:'+(process.env.PORT||7070)+'/health').then(r=>r.json()).then(console.log).catch(e=>{console.error(e);process.exit(1)})\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "lint": "eslint .",
    "package": "node esbuild.config.js"
  },
  "engines": {
    "node": ">=18.17"
  },
  "dependencies": {
    "@basementuniverse/bm25": "^0.1.0",
    "@xenova/transformers": "^2.15.0",
    "axios": "^1.12.2",
    "commander": "^12.1.0",
    "express": "^4.19.2",
    "js-yaml": "^4.1.0",
    "lru-cache": "^11.2.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "esbuild": "^0.25.9",
    "eslint": "^9.35.0",
    "jest": "^30.1.3"
  }
}
